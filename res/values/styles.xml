<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="title_imButon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_back</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="title_text_new">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/contact_text_name</item>
        <item name="android:textColor">@color/textcolor_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="add_dialog" parent="@android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item><!-- 边框 -->  
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->  
        <item name="android:windowIsTranslucent">true</item><!-- 半透明 -->  
        <item name="android:windowNoTitle">false</item><!-- 无标题 -->  
        <item name="android:windowBackground">@color/bantouming</item><!-- 自己想要的背景 -->  
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->  
    </style>  

        <style name="AppTheme.NoTitleBar" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:background">#ff000000</item>
    </style>
    
</resources>
